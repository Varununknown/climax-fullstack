{
  "name": "climax-fullstack",
  "version": "1.0.0",
  "description": "Climax OTT Platform - Full Stack Monorepo",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install --production",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "lint": "cd frontend && npm run lint"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.848.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.8",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "google-auth-library": "^10.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "multer-storage-cloudinary": "^4.0.0",
    "razorpay": "^2.9.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": ["ott", "streaming", "fullstack", "react", "nodejs", "monorepo"],
  "author": "Varun",
  "license": "MIT"
}
